import javafx.application.Application;
import javafx.scene.Scene;
import javafx.stage.Stage;
import javafx.scene.layout.VBox;
import javafx.scene.control.TextField;
import javafx.scene.control.TextArea;
import java.util.Random;

public class Main extends Application{
    @Override
    public void start(Stage primaryStage){
        Random aleator = new Random();
        int a = aleator.nextInt(100)+1;

        TextField scris = new TextField();
        scris.setPrefSize(100, 50 );
        scris.setMaxWidth(100);


        TextArea text1 = new TextArea();
        text1.setPrefSize(100, 50);
        text1.setEditable(false);
        text1.setMaxWidth(100);


        scris.setOnAction(event -> {
            int valoare = Integer.parseInt(scris.getText());
            if (a>valoare){
                text1.setText("Mai mare");
            }
            if (a<valoare){
                text1.setText("Mai mic");
            }
            if(a==valoare){
                text1.setText("Corect!");
            }
            scris.clear();
        });

        VBox x = new VBox(20);
        x.getChildren().addAll(text1, scris);

        Scene scene = new Scene(x,700, 500);
        primaryStage.setTitle("Ghiceste numaru");
        primaryStage.setScene(scene);
        primaryStage.show();
    }
    public static void main(String[] args) {
        launch(args);
    }
}
