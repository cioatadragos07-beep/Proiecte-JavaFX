import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
import javafx.scene.control.TextField;
import javafx.scene.control.Button;
import javafx.scene.control.ListView;

public class Main extends Application{
    @Override
    public void start(Stage primaryStage){
        TextField txt1 = new TextField();
        txt1.setEditable(true);
        txt1.setMaxWidth(100);
        txt1.setMinWidth(100);
        txt1.setMaxHeight(200);
        txt1.setMaxHeight(200);

        ListView<String> lstvw = new ListView<>();
        ListView<String> lst2 = new ListView<>();

        Button btn1 = new Button("Add to the TO-DO list");
        btn1.setOnAction(e -> {
            lstvw.getItems().add(txt1.getText());
        });
        Button btn2 = new Button("Mark as done");
        btn2.setOnAction(e ->{
            String item = lstvw.getSelectionModel().getSelectedItem();
            if(item != null){
                lstvw.getItems().remove(item);
            }
            lst2.getItems().add(item);
        });
        Button btn3 = new Button("Delete from the TO-DO list");
        btn3.setOnAction(e ->{
            String item = lstvw.getSelectionModel().getSelectedItem();
            if(item != null){
                lstvw.getItems().remove(item);
            }
        });

        VBox vbx = new VBox(10);
        vbx.getChildren().addAll(txt1, lstvw, lst2, btn1, btn2, btn3);

        Scene scene = new Scene(vbx, 700, 500);
        primaryStage.setTitle("TO-DO list");
        primaryStage.setScene(scene);
        primaryStage.show();
    }
    public static void main(String[] args) {
        launch(args);
    }
}
